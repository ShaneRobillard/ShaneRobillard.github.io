<%- include('../partials/header.ejs')%>
    <div class="content">
        <h2>Edit Item: <%=trade.name%> by <%=trade.brand.userName%></h2>
        <div class = "content-edit">
            <div class="content-form">
                <form>
                    <table> 
                        <tr>
                            <td class="align-top"><label for="name">Name</label></td>
                            <td><input type="text" id="name" name="name" value="<%=trade.name%>" class="fixed-width" required></td>
                        </tr>
                        <tr> 
                            <td class="align-top"><label for="category">Category</label></td>
                            <td><input type="text" id="category" name="category" value="<%=trade.category%>" class="fixed-width" required></td>
                        </tr>
                        <tr>
                            <td class="align-top"><label for="price">Price (US$)</label></td>
                            <td><input type="number" step="0.01" id="price" name="price" value="<%=trade.price%>" class="fixed-width" required min="5" max="500"></td>
                        </tr>
                        <tr>
                            <td class="align-top"><label for="status">Status</label></td>
                            <td>
                                <%if(trade.status == "In Stock") {%>
                                    <input type="radio" id="status_in" name="status" value="In Stock" checked>
                                    <label for="In Stock">In Stock</label><br>
                                    <input type="radio" id="status_out" name="status" value="Out Of Stock">
                                    <label for="Out Of Stock">Out Of Stock</label><br>
                                <%}
                                else {%>
                                    <input type="radio" id="status_in" name="status" value="In Stock">
                                    <label for="In Stock">In Stock</label><br>
                                    <input type="radio" id="status_out" name="status" value="Out Of Stock" checked>
                                    <label for="Out Of Stock">Out Of Stock</label><br>
                                <%}%>
                            </td>
                        </tr>
                        <tr>
                            <td class="align-top"><label for="details">Details</label></td>
                            <td><textarea rows="5" id="details" name="details" class="fixed-width" required><%=trade.details%></textarea></td>
                        </tr>
                        <tr class="tr-buttons">
                            <td><a href="/"><button type="button" class="btnLink">Cancel</button></a></td>
                            <td><button type="submit" formmethod="POST" formaction="/trades/<%=trade._id%>?_method=PUT">Submit</button></td>
                        </tr>
                    </table>
                </form>
            </div>
            <div class="content-edit-img"><img src="<%=trade.img%>" alt="trade-img"></div>
        </div>
    </div>
<%- include('../partials/footer.ejs')%>