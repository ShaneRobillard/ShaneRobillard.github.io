<%- include('../partials/header.ejs')%>
    <div class = "content">
        <h2>Trades</h2>
		<%if(Object.keys(categories).length){%>
			<% for (const [key, value] of Object.entries(categories)) {%>
				<div class ='content-components'>
					<h4><%=key%></h4>
					<div class = 'category-row'>
						<% value.forEach((val, ind) => {%>
							<%if((ind+1)==1) {%>
								<div class = "trade-component">
									<div class = "trade-img"><a href = '/trades/<%= val._id%>'><img src="<%=val.img%>" alt="val-img"></a></div>
									<a href = '/trades/<%= val._id%>'><p><%=val.name%></p></a>
									<p class="align-right">$<%=val.price%></p>
								</div>
							<%}
							else {%>
								<%if((ind+1)%2==0){%>
									<div class = "trade-component">
										<div class = "trade-img"><a href = '/trades/<%= val._id%>'><img src="<%=val.img%>" alt="val-img"></a></div>
										<a href = '/trades/<%= val._id%>'><p><%=val.name%></p></a>
										<p class="align-right">$<%=val.price%></p>
									</div>
								<%}
								else {%>
									<%if((ind+1)%3==0){%>
										<div class = "trade-component">
											<div class ="trade-img"><a href = '/trades/<%= val._id%>'><img src="<%=val.img%>" alt="val-img"></a></div>
											<a href = '/trades/<%= val._id%>'><p><%=val.name%></p></a>
											<p class="align-right">$<%=val.price%></p>
										</div>
									<%}%>
								<%}%>
							<%}%>
						<%})%>
					</div>
				</div>
			<%}%>
		<%}
		else {%>
			<p>There are no products to display.</p>
		<%}%>
	</div>
<%- include('../partials/footer.ejs')%>