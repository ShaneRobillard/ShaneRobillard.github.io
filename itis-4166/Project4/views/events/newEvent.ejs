<%- include('../partials/header.ejs')%>

    <main class="package">

        <div class="body">
            <h1>Events</h1>

            <hr>


            <!-- <form action="/newEvents" method="POST"> -->
            <form action="/events" method="POST" enctype="multipart/form-data" class="new-form">

                <label for="category" class="category">Category:</label>
                <select name="category" id="category" class="category" required>
                    <option value="Select Category">Select Category</option>
                    <option value="Looking For Team Center">Looking For Team Center</option>
                    <option value="Esport Watch Party">Esport Watch Party</option>
                    <option value="Meet And Greet">Meet And Greet</option>
                    <option value="Coaching">Coaching</option>
                    <option value="Compete">Compete</option>

                </select>

                <br><br>

                <label for="title">Title:</label>
                <input type="text" id="title" name="title" placeholder="title" required>

                <br><br>

                <label for="details">Details:</label>
                <input type="details" id="details" name="details" placeholder="description" required>

                <br><br>

                <label for="location">Location:</label>
                <input type="text" id="location" name="location" placeholder="location" required>

                <br><br>

                <label for="startDateTime">Start:</label>
                <input type="datetime-local" id="start" name="start" placeholder="mm/dd/yyyy" required>

                <br><br>

                <label for="endDateTime">End:</label>
                <input type="datetime-local" id="end" name="end" placeholder="mm/dd/yyyy" required>

                <br><br>

                <label for="image">Image:</label>
                <input type="file" id="image" name="image" accept="image/jpeg, image/png, image/svg" required>

                <br><br>

                <input type="submit" id="submit" value="submit the form" formmethod="POST" formaction="/events">

            </form>

        </div>

        <hr>


    </main>

    <%- include('../partials/footer.ejs') %>