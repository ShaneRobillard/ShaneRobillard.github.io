<%- include('../partials/header.ejs')%>
<title>Profile</title>
<link type="text/css" rel="stylesheet" href="/css/login.css">
<div id="preloader"></div>
<div class="content">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <img src="" class="">
            </div>
            <div class="col-md-8">
                <h1>
                    <%=user.firstName%>
                    <%=user.lastName%>
                </h1>
                <h3>Here are the events you've created: </h3>
                <ul id="events">
                    <% if(user.events.length) {%>
                    <% user.events.forEach(event => { %>
                    <% if (event.author._id === user._id) { %>
                    <li>
                        <%=event.title%>
                        <a href="/events/edit/<%= event._id %>">Edit</a>
                        <a href="/events/delete/<%= event._id %>">Delete</a>
                    </li>
                    <% } %>
                    <% }); %>
                    <% } else { %>
                    <p>You have no events to display.</p>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs')%>
