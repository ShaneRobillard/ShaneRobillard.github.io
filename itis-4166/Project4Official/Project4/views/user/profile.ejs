<%- include('../partials/header.ejs')%>
    <title>Profile</title>
    <link type="text/css" rel="stylesheet" href="/css/login.css">
    <div id="preloader"></div>
    <div class="content">
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-4">
                    <img src="" class="">
                </div>
                <div class="col-md-8">
                    <h1>
                        <h3>Welcome, <%=user.firstName%>
                                <%=user.lastName%>
                        </h3>
                    </h1>
                    <h3>Here are the events you've created: </h3>
                    <ul id="events">
                        <%if(events.length){%>
                            <%events.forEach(event=>{%>
                                <!-- <%if(event.author._id === event.author._id){%> -->
                                <h2>
                                    <%=event.title%>
                                </h2>&nbsp;
                                <form class="editform1">
                                    <button type="submit" formmethod="GET"
                                        formaction="/events/<%= event._id%>/edit"><img src="/images/edit.png"></button>
                                    <button type="submit" formmethod="POST"
                                        formaction="/events/<%= event._id%>?_method=DELETE"><img
                                            src="/images/delete.png"></button>
                                </form>
                                <%}%>
                                    <%});%>
                                        <%}else{%>
                                            <p>You have no events to display.</p>
                                            <%}%>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/footer.ejs')%>