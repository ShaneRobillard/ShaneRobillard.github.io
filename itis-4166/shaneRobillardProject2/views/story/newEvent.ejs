<%- include('../partials/header.ejs')%>
<main>
    <div class="body">
        <form>
            <label for="category" class="category">Category</label>
            <select name="category" id="category" class="category" required>
                <option value="select">--Select A Category--</option>
                <option value="Viewing Parties">Viewing Party</option>
                <option value="Educational Classes">Educational Class</option>
                <option value="Club Meeting">Club Meeting</option>
                <option value="WorkShop">WorkShop</option>
                <option value="Other">Other</option>
            </select>
            <label for="title">Title</label>
            <input type="text" id="title" name="title" placeholder="Title" required><br><br>
            <label for="hostName">Host Name</label>
            <input type="text" id="hostName" name="hostName" placeholder="Host Name" required><br><br>
            <label for="details">Details</label>
            <input type="text" id="details" name="details" placeholder="Description" required><br><br>
            <label for="location">Where</label>
            <input type="text" id="location" name="location" placeholder="Location" required><br><br>
            <label for="start">Start</label>
            <input type="datetime-local" id="start" name="startTime" required><br><br>
            <label for="end">End</label>
            <input type="datetime-local" id="end" name="endTime" required><br><br>
            <label for="img">Image</label>
            <input type="file" id="img" name="img" accept="image/*" required><br><br>
            <input type="submit" id="submit" value="Submit" formmethod="POST" formaction="/events">
    </form>
    </div>
</main>
